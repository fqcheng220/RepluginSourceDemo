<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qihoo360.replugin.sample.demo1"
    android:targetSandboxVersion="2"
    android:versionCode="104"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.qihoo360.replugin.sample.demo1.MainApp"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <meta-data
            android:name="process_map"
            android:value="[             {&apos;from&apos;:&apos;com.qihoo360.replugin.sample.demo1:bg&apos;,&apos;to&apos;:&apos;$p0&apos;}             ]" />

        <activity
            android:name="com.qihoo360.replugin.sample.demo1.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 最简Activity -->
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.standard.StandardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- theme 测试 -->
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.theme.ThemeBlackNoTitleBarActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" />

        <!-- NoTitleBar -->
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.theme.ThemeDialogActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />

        <!-- NoTitleBarFullScreen -->
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.theme.ThemeBlackNoTitleBarFullscreenActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="com.qihoo360.replugin.sample.demo1.action.theme_fullscreen" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.qihoo360.repluginapp.replugin.demo1.CATEGORY1" />
            </intent-filter>
        </activity>

        <!-- receivers -->
        <receiver android:name="com.qihoo360.replugin.sample.demo1.receivers.PluginDemo1Receiver" >
            <intent-filter>
                <action android:name="com.qihoo360.repluginapp.replugin.receiver.ACTION1" />
            </intent-filter>
        </receiver>

        <!-- service -->
        <service android:name="com.qihoo360.replugin.sample.demo1.service.PluginDemoAppService" />
        <service
            android:name="com.qihoo360.replugin.sample.demo1.service.PluginDemoService1"
            android:process=":bg" />
        <service android:name="com.qihoo360.replugin.sample.demo1.service.PluginDemoService2" >
            <intent-filter>
                <action android:name="com.qihoo360.replugin.sample.demo1.action.XXXX" />
            </intent-filter>
        </service>

        <!-- TaskAffinity -->
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.task_affinity.TAActivity1"
            android:launchMode="singleTask"
            android:taskAffinity=":ta_1"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.task_affinity.TAActivity2"
            android:launchMode="singleTask"
            android:taskAffinity=":ta_1"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.task_affinity.TAActivity3"
            android:launchMode="singleTask"
            android:taskAffinity=":ta_1"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.task_affinity.TAActivity4"
            android:launchMode="singleTask"
            android:taskAffinity=":ta_1"
            android:theme="@android:style/Theme.Black.NoTitleBar" />

        <!-- TaskAffinity-end -->

        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.single_instance.TIActivity1"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Black.NoTitleBar" />

        <!-- SingleTop -->
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.single_top.SingleTopActivity1"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Black.NoTitleBar" />

        <!-- IntentFilter -->

        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.intent_filter.IntentFilterDemoActivity1"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.demo1" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="category_demo" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.preference.PrefActivity1"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.preference.PrefActivity2"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qihoo360.replugin.sample.demo1.activity.webview.WebViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait" />

        <provider
            android:name="com.qihoo360.replugin.sample.demo1.provider.Provider2"
            android:authorities="com.qihoo360.replugin.sample.demo1.provider2" />

        <activity android:name="com.qihoo360.replugin.sample.demo1.activity.for_result.ForResultActivity" />
        <activity android:name="com.qihoo360.replugin.sample.demo1.activity.file_provider.FileProviderActivity" />
        <activity android:name="com.qihoo360.replugin.sample.demo1.activity.notify_test.NotifyActivity" />

        <!-- 以下provider，作为插件时，可注释掉；作为单独APK时需要声明 -->
        <provider
            android:name="com.qihoo360.replugin.sample.demo1.provider.FileProvider"
            android:authorities="com.qihoo360.replugin.sample.host.FILE_PROVIDER"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider_path" />
        </provider>

        <activity
            android:name="com.qihoo360.replugin.sample.library.LibMainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>